<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_goods_head_logo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:padding="4dp"
                app:placeholderImage="@drawable/ic_user"
                app:roundAsCircle="true"/>

            <TextView
                android:id="@+id/tt_goods_head_time"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="5"
                android:gravity="start|center_vertical"
                android:text="昨天14.00"
                android:textColor="#848484"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tt_goods_head_content"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:text="我是计科院信息管理专业某某某"
            android:textColor="#2b2a2a"
            android:textSize="16sp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_goods_head_peitu"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:padding="4dp"
            app:placeholderImage="@drawable/ic_user"
            app:roundAsCircle="true"/>
    </LinearLayout>
</LinearLayout>